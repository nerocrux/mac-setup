#################################################
# オプション
#################################################
# 現在のウィンドウに対して可視ベルの設定します。
vbell off
# ハングアップしたときにscreenは自動的にデタッチ
autodetach on
# 起動時に著作権表示
startup_message off
# スクロールバックバッファの大きさ
defscrollback 1000
# 画面の一番下の行を反転させてハードステータス表示
hardstatus alwayslastline "%{= gk}[%m/%d %02c:%s] %{gW} %-w%{= wk}%n %t%{-}%+w %=%{gk}$USER@$HOSTNAME[$LANG] (%l) "
# 背景色消去
defbce "on"
# シェルタイトル
shelltitle '% |zsh'
# ターミナル
term xterm-256color
shell "/usr/local/bin/zsh"

#################################################
# キーバインド
#################################################

# escape
escape ^Bb

defencoding utf8
encoding utf8 utf8
